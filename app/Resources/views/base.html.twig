<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8"/>
    <title>{% block title %}Welcome!{% endblock %}</title>
    {% block stylesheets %}
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-alpha.6/css/bootstrap.min.css"
              integrity="sha384-rwoIResjU2yc3z8GV/NPeZWAv56rSmLldC3R/AZzGRnGxQQKnKkoFVhFQhNUwEyJ"
              crossorigin="anonymous">
    {% endblock %}
    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}"/>
</head>
<body>
<div class="container">
    <div class="flex-row">
        <div class="float-right">
            {% if app.user %}
                Zalogowany jako {{ app.user }} | {% if is_granted('ROLE_ADMIN') %} <a href="{{ path('admin') }}">Panel
                Admina |</a> {% endif %} <a href="{{ path('fos_user_security_logout') }}">Wyloguj</a>
            {% else %}
                <a href="{{ path('fos_user_security_login') }}">Zaloguj siÄ™</a>
            {% endif %}
        </div>
    </div>

    <div class="flex-row">
        {% for label, messages in app.flashes(['success','warning', 'error']) %}
            {% for message in messages %}
                <div class="alert alert-{{ label }}">
                    {{ message }}
                </div>
            {% endfor %}
        {% endfor %}
    </div>


    {% block body %}{% endblock %}
</div>
{% block javascripts %}{% endblock %}
</body>
</html>
